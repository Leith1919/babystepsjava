<AnchorPane prefHeight="700.0" prefWidth="1158.0" style="-fx-background-color: #f5f7fa;" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.User.AfficherRendezVousFront">
    <children>
        <AnchorPane layoutY="-7.0" prefHeight="707.0" prefWidth="1311.0" style="-fx-background-color: rgb(233, 246, 255);" />
        <!-- Main Content Area -->
        <AnchorPane layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="860.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

            <!-- Section Header -->
            <HBox alignment="CENTER_LEFT" layoutY="14.0" prefHeight="60.0" prefWidth="860.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="14.0">
                <padding>
                    <Insets left="25.0" right="25.0" />
                </padding>
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <children>
                            <Label text="Liste des Rendez-vous" textFill="#2c5282">
                                <font>
                                    <Font name="System Bold" size="22.0" />
                                </font>
                            </Label>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT" spacing="15.0" HBox.hgrow="ALWAYS">
                        <children>
                            <Button mnemonicParsing="false" onAction="#navigateToAjouterRDV" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #2c5282; -fx-background-radius: 8;" text="Nouveau rendez-vous" textFill="WHITE">
                                <font>
                                    <Font name="System Bold" size="13.0" />
                                </font>
                                <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@assets/icons8-add-16.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </children>
                    </HBox>
                </children>
            </HBox>

            <!-- Search & Filter Bar -->
            <HBox alignment="CENTER_LEFT" layoutY="103.0" prefHeight="60.0" prefWidth="860.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="103.0">
                <padding>
                    <Insets left="25.0" right="25.0" />
                </padding>
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                        <children>
                            <TextField fx:id="searchField" prefHeight="40.0" promptText="Rechercher par motif, médecin, symptômes..." style="-fx-background-color: #f1f5f9; -fx-background-radius: 8;" HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <children>
                            <Button fx:id="btnAll" mnemonicParsing="false" prefHeight="40.0" style="-fx-background-color: #2c5282; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-weight: bold;" text="Tous">
                                <padding>
                                    <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                                </padding>
                            </Button>
                        </children>
                    </HBox>
                </children>
            </HBox>

            <!-- Table Container with ScrollPane for better handling of large data -->
            <AnchorPane layoutX="0.0" layoutY="235.0" prefHeight="435.0" prefWidth="860.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="235.0">
                <children>
                    <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <padding>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                        </padding>
                        <children>
                            <!-- Table Header -->
                            <HBox alignment="CENTER_LEFT">
                                <children>
                                    <Label text="Tous les rendez-vous" textFill="#1e293b">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label fx:id="lblRendezVousCount" text="0 rendez-vous trouvés" textFill="#64748b">
                                                <font>
                                                    <Font size="13.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                </children>
                            </HBox>

                            <!-- ScrollPane for Table -->
                            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
                                <content>
                                    <!-- Enhanced Table -->
                                    <TableView fx:id="tableRendezVous" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e2e8f0; -fx-border-width: 1;">
                                        <columns>
                                            <TableColumn fx:id="colMotif" prefWidth="170.0" style="-fx-alignment: CENTER-LEFT;" text="Motif" />
                                            <TableColumn fx:id="colSymptomes" prefWidth="150.0" style="-fx-alignment: CENTER-LEFT;" text="Symptômes" />
                                            <TableColumn fx:id="colTraitement" prefWidth="130.0" style="-fx-alignment: CENTER-LEFT;" text="Traitement" />
                                            <TableColumn fx:id="colNotes" prefWidth="116.79995727539062" style="-fx-alignment: CENTER-LEFT;" text="Notes" />
                                            <TableColumn fx:id="colJour" prefWidth="106.4000244140625" style="-fx-alignment: CENTER;" text="Date" />
                                            <TableColumn fx:id="colHeure" prefWidth="96.79998779296875" style="-fx-alignment: CENTER;" text="Heure" />
                                            <TableColumn fx:id="colMedecin" prefWidth="97.60003662109375" style="-fx-alignment: CENTER-LEFT;" text="Médecin" />
                                            <TableColumn fx:id="colActions" prefWidth="201.60003662109375" style="-fx-alignment: CENTER;" text="Actions" />
                                        </columns>
                                        <columnResizePolicy>
                                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                        </columnResizePolicy>
                                    </TableView>
                                </content>
                            </ScrollPane>
                        </children>
                    </VBox>
                </children>
            </AnchorPane>
        </AnchorPane>
    </children>
</AnchorPane>
