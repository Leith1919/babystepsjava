<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.User.StatistiquesController"
      style="-fx-padding: 20;">

    <Label text="Statistiques des Articles" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <HBox spacing="50" alignment="CENTER">
        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="totalVuesLabel" text="👁👁Total Vues : 0" style="-fx-font-size: 14px;" />
            <Label fx:id="totalLikesLabel" text="❤️❤️Total Likes : 0" style="-fx-font-size: 14px;" />
        </VBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Top 3 des articles les plus vus" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            <ListView fx:id="top3List" prefHeight="120" prefWidth="250"/>
        </VBox>
    </HBox>

    <BarChart fx:id="barChart" title="Vues et Likes par Article❤️||👁" prefWidth="700" prefHeight="400">
        <xAxis>
            <CategoryAxis fx:id="xAxis" label="Titre de l'article"/>
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Nombre"/>
        </yAxis>
    </BarChart>

</VBox>
