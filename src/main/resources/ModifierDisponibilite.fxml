                    <children>
                        <Button fx:id="saveButton" onAction="#enregistrerModification" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #0099FF;" text="Enregistrer les modifications" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button onAction="#annuler" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #999999;" text="Annuler" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
