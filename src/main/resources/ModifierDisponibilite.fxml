            <children>
                <Label text="Modifier une disponibilité" textFill="#4a90e2">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Label text="Date" textFill="#4a90e2">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
                <DatePicker fx:id="datePicker" prefWidth="250.0" />
                <Label fx:id="dateErrorLabel" text="La date doit être dans le futur" textFill="RED" visible="false" />

                <Label text="Statut" textFill="#4a90e2">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="statutComboBox" prefWidth="250.0" promptText="Choisir un statut" />
                <Label fx:id="statutErrorLabel" text="Le statut est obligatoire" textFill="RED" visible="false" />

                <Label text="Créneaux horaires disponibles" textFill="#4a90e2">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <CheckBox fx:id="check9_11" text="9-11" />
                        <CheckBox fx:id="check11_13" text="11-13" />
                        <CheckBox fx:id="check14_16" text="14-16" />
                        <CheckBox fx:id="check16_18" text="16-18" />
                    </children>
                </HBox>
                <Label fx:id="creneauErrorLabel" text="Sélectionnez au moins un créneau horaire" textFill="RED" visible="false" />

