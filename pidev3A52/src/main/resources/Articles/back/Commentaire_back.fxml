<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="600.0" prefWidth="700.0" styleClass="main-content" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.Article.CommentaireBackController">

    <children>
        <VBox alignment="TOP_CENTER" prefWidth="660.0" spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

            <!-- Titre -->
            <Label styleClass="title-text-primary" text="Gestion des Commentaires" />

            <!-- Formulaire d'ajout -->
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="emailField" prefWidth="150" promptText="Votre Email" styleClass="grid-field" />
                <TextArea fx:id="commentaireField" prefRowCount="2" prefWidth="300" promptText="Votre Commentaire" styleClass="grid-field" />
                <Button fx:id="addCommentButton" styleClass="add-button" stylesheets="@../../style.css" text="Ajouter" />
            </HBox>

            <!-- Zone Scrollable des Commentaires -->
            <ScrollPane fitToWidth="true" prefHeight="450.0">
                <content>
                    <VBox fx:id="commentsContainer" spacing="15" />
                </content>
            </ScrollPane>

        </VBox>
    </children>
</AnchorPane>
