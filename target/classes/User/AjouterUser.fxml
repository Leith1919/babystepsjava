<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="706.0" prefWidth="1300.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.User.AjouterUser">
   <children>
      <!-- Header Section -->
      <AnchorPane layoutY="0" prefHeight="151.0" prefWidth="1300.0" style="-fx-background-color: rgb(127, 199, 217);">
         <children>
            <Label alignment="CENTER" layoutX="365.0" layoutY="30.0" prefHeight="92.0" prefWidth="571.0" text="Ajouter Utilisateur" textFill="#1b0000">
               <font>
                  <Font name="System Bold" size="42.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>

      <!-- Action Buttons -->
      <HBox alignment="CENTER" layoutX="365.0" layoutY="165.0" prefHeight="56.0" prefWidth="787.0" style="-fx-background-radius: 10px; -fx-background-color: rgb(220, 242, 241);">
         <children>
            <Button mnemonicParsing="false" onAction="#ajouterUser" prefHeight="40.0" prefWidth="200.0" style="-fx-background-radius: 10px; -fx-background-color: rgb(218, 192, 163);" text="Ajouter Utilisateur" textFill="#030000">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
               <effect>
                  <DropShadow color="#00000040" height="5.0" radius="2.0" width="5.0" />
               </effect>
            </Button>
            <Button fx:id="btnUtilisateurs" mnemonicParsing="false" onAction="#afficherUsers" prefHeight="40.0" prefWidth="200.0" style="-fx-background-radius: 10px; -fx-background-color: rgb(218, 192, 163);" text="Liste des Utilisateurs" textFill="#030000">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <effect>
                  <DropShadow color="#00000040" height="5.0" radius="2.0" width="5.0" />
               </effect>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>

      <!-- Main Form Area -->
      <AnchorPane layoutX="365.0" layoutY="240.0" prefHeight="420.0" prefWidth="787.0" style="-fx-background-color: #f5f5f5; -fx-background-radius: 15px;">
         <effect>
            <DropShadow color="#00000040" height="10.0" radius="4.5" width="10.0" />
         </effect>
         <children>
            <!-- Form Title -->
            <Label alignment="CENTER" layoutX="0.0" layoutY="20.0" prefHeight="40.0" prefWidth="787.0" text="Informations de l'utilisateur" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>

            <!-- Form Fields -->
            <VBox alignment="CENTER" layoutX="20.0" layoutY="70.0" prefHeight="330.0" prefWidth="350.0" spacing="15.0">
               <children>
                  <!-- Name Field -->
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <Label prefWidth="120.0" text="Nom:" textFill="#2c3e50">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nomTF" prefHeight="35.0" prefWidth="230.0" promptText="Entrez le nom" style="-fx-background-radius: 5px;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>

                  <!-- First Name Field -->
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <Label prefWidth="120.0" text="Prénom:" textFill="#2c3e50">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="prenomTF" prefHeight="35.0" prefWidth="230.0" promptText="Entrez le prénom" style="-fx-background-radius: 5px;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>

                  <!-- Nationality Field -->
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <Label prefWidth="120.0" text="Nationalité:" textFill="#2c3e50">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="adresseTF" prefHeight="35.0" prefWidth="230.0" promptText="Entrez la nationalité" style="-fx-background-radius: 5px;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>

                  <!-- Email Field -->
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <Label prefWidth="120.0" text="Email:" textFill="#2c3e50">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="emailTF" prefHeight="35.0" prefWidth="230.0" promptText="Entrez l'email" style="-fx-background-radius: 5px;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>

                  <!-- Password Field -->
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <Label prefWidth="120.0" text="Mot de passe:" textFill="#2c3e50">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="mdpTF" prefHeight="35.0" prefWidth="230.0" promptText="Entrez le mot de passe" style="-fx-background-radius: 5px;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>

                  <!-- Phone Field -->
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <Label prefWidth="120.0" text="Téléphone:" textFill="#2c3e50">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="numtelTF" prefHeight="35.0" prefWidth="230.0" promptText="Entrez le numéro" style="-fx-background-radius: 5px;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
               </children>
            </VBox>

            <!-- Role Selection Area -->
            <VBox alignment="CENTER" layoutX="420.0" layoutY="140.0" prefHeight="192.0" prefWidth="300.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10px;">
               <children>
                  <Label alignment="CENTER" prefHeight="40.0" prefWidth="300.0" text="Type d'utilisateur" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>

                  <RadioButton fx:id="et" graphicTextGap="8.0" prefHeight="50.0" prefWidth="240.0" text="[&quot;ROLE_USER&quot;]" textFill="#2c3e50">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </RadioButton>

                  <RadioButton fx:id="fo" graphicTextGap="8.0" prefHeight="50.0" prefWidth="240.0" text="[&quot;ROLE_ADMIN&quot;]" textFill="#2c3e50">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </RadioButton>
               </children>
               <effect>
                  <DropShadow color="#00000040" height="5.0" radius="2.0" width="5.0" />
               </effect>
               <padding>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </AnchorPane>
   </children>
</AnchorPane>
