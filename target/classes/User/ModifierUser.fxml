<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="706.0" prefWidth="1300.0"
            style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.User.ModifierUser">

   <children>
      <!-- Header Section -->
      <AnchorPane layoutY="0" prefHeight="151.0" prefWidth="1300.0" style="-fx-background-color: rgb(127, 199, 217);">
         <children>
            <Label alignment="CENTER" layoutX="365.0" layoutY="30.0" prefHeight="92.0" prefWidth="571.0" text="Modifier Utilisateur" textFill="#1b0000">
               <font>
                  <Font name="System Bold" size="42.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>

      <!-- Main Form -->
      <AnchorPane layoutX="365.0" layoutY="180.0" prefHeight="420.0" prefWidth="787.0" style="-fx-background-color: #f5f5f5; -fx-background-radius: 15px;">
         <VBox spacing="15.0" alignment="CENTER" layoutX="20.0" layoutY="20.0" prefWidth="750.0" prefHeight="380.0">
            <children>
               <HBox spacing="10.0">
                  <Label text="Nom:" prefWidth="120.0"/>
                  <TextField fx:id="nomNouv" prefWidth="250.0"/>
               </HBox>

               <HBox spacing="10.0">
                  <Label text="Prénom:" prefWidth="120.0"/>
                  <TextField fx:id="prenomNouv" prefWidth="250.0"/>
               </HBox>

               <HBox spacing="10.0">
                  <Label text="Nationalité:" prefWidth="120.0"/>
                  <TextField fx:id="nationnaliteNouv" prefWidth="250.0"/>
               </HBox>

               <HBox spacing="10.0">
                  <Label text="Email:" prefWidth="120.0"/>
                  <TextField fx:id="emailNouv" prefWidth="250.0"/>
               </HBox>

               <HBox spacing="10.0">
                  <Label text="Téléphone:" prefWidth="120.0"/>
                  <TextField fx:id="numtelNouv" prefWidth="250.0"/>
               </HBox>

               <HBox spacing="20.0" alignment="CENTER">
                  <Label text="Rôle:"/>
                  <RadioButton fx:id="roleAdmin" text="[&quot;ROLE_ADMIN&quot;]"/>
                  <RadioButton fx:id="roleUser" text="[&quot;ROLE_USER&quot;]"/>
               </HBox>

               <HBox spacing="20.0" alignment="CENTER">
                  <Button onAction="#modifierUser" text="Enregistrer" prefWidth="200.0"
                          style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
                     <Button onAction="#annuler" text="Annuler" prefWidth="150.0"
                             style="-fx-background-color: #FF5A5F; -fx-text-fill: white; -fx-font-size: 14px;"/>
               </HBox>
            </children>
         </VBox>
      </AnchorPane>
   </children>
</AnchorPane>
