<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.User.CommentaireBackController"
            fitToWidth="true"
            prefHeight="600.0" prefWidth="700.0"
            styleClass="main-content"
            stylesheets="@../../style.css">

    <content>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- ðŸ”¹ Titre -->
            <Label styleClass="title-text-primary" text="Gestion des Commentaires"/>

            <!-- ðŸ”¥ Zone d'alerte impolie -->
            <Label fx:id="errorLabel"
                   text="âš ï¸ Vous avez fait un commentaire impoli !"
                   visible="false"
                   style="-fx-text-fill: red; -fx-font-size: 16px; -fx-font-weight: bold;"/>

            <!-- ðŸ”¹ Formulaire d'ajout -->
            <HBox alignment="CENTER" spacing="10">
                <TextArea fx:id="commentaireField" prefRowCount="2" prefWidth="300" promptText="Votre Commentaire" styleClass="grid-field"/>
                <Button fx:id="addCommentButton" styleClass="add-button" text="Ajouter"/>
            </HBox>

            <!-- ðŸ”¹ Zone Scrollable des Commentaires -->
            <ScrollPane fitToWidth="true" prefHeight="450.0">
                <content>
                    <VBox fx:id="commentsContainer" spacing="15"/>
                </content>
            </ScrollPane>

        </VBox>
    </content>
</ScrollPane>
