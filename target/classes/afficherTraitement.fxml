<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllors.AfficherTraitementControllors">
   <children>
      <!-- Title -->
      <Label layoutX="200.0" layoutY="10.0" text="Liste des Traitements" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

      <!-- Newly added Traitement Details -->
      <Label layoutX="50.0" layoutY="45.0" text="ID: " />
      <Label fx:id="idLabel" layoutX="100.0" layoutY="45.0" />

      <Label layoutX="200.0" layoutY="45.0" text="Ordonnance ID: " />
      <Label fx:id="ordonnanceLabel" layoutX="300.0" layoutY="45.0" />

      <Label layoutX="50.0" layoutY="70.0" text="Date: " />
      <Label fx:id="dateLabel" layoutX="100.0" layoutY="70.0" />

      <Label layoutX="200.0" layoutY="70.0" text="Historique: " />
      <Label fx:id="historiqueLabel" layoutX="300.0" layoutY="70.0" />

      <!-- ListView -->
      <ListView fx:id="traitementListView" layoutX="50.0" layoutY="110.0" prefHeight="250.0" prefWidth="500.0" />

      <!-- Buttons -->
      <Button layoutX="200.0" layoutY="380.0" text="Supprimer" onAction="#supprimerTraitement" prefWidth="90.0" />
      <Button layoutX="310.0" layoutY="380.0" text="Modifier" onAction="#modifierTraitement" prefWidth="90.0" />
      <Button layoutX="450.0" layoutY="360.0" text="Finish" onAction="#transitionToAjouterOrdonnance" />
   </children>
</AnchorPane>
