<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllors.AjouterTraitementControllors"
            prefHeight="400.0" prefWidth="600.0">
   <children>
      <VBox layoutX="100.0" layoutY="30.0" spacing="15.0">
         <children>

            <HBox spacing="20.0">
               <Label text="ID:" minWidth="120"/>
               <TextField fx:id="idTF" prefWidth="250"/>
            </HBox>

            <HBox spacing="20.0">
               <Label text="Ordonnance:" minWidth="120"/>
               <ComboBox fx:id="ordonnanceComboBox" prefWidth="250"/>
            </HBox>

            <HBox spacing="20.0">
               <Label text="Date de prescription:" minWidth="120"/>
               <TextField fx:id="dateTF" promptText="yyyy-MM-dd" prefWidth="250"/>
            </HBox>

            <HBox spacing="20.0">
               <Label text="Historique:" minWidth="120"/>
               <TextField fx:id="historiqueTF" prefWidth="250"/>
            </HBox>

            <Button fx:id="ajouter" onAction="#ajouter" text="Ajouter Traitement" prefWidth="200"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                    alignment="CENTER"/>
         </children>
         <padding>
            <Insets top="10" right="20" bottom="10" left="20"/>
         </padding>
      </VBox>
   </children>
</AnchorPane>