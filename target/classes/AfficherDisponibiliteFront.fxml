<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f5f7fa;" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.User.AfficherDisponibiliteFront">
    <children>
        <AnchorPane layoutX="-19.0" layoutY="-23.0" prefHeight="647.0" prefWidth="1597.0" style="-fx-background-color: rgb(233, 246, 255);" />
        <!-- Main Content Area avec meilleur positionnement -->
        <AnchorPane layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="860.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <!-- Header avec icône et titre amélioré -->
            <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="0.0" prefHeight="60.0" prefWidth="860.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <children>
                            <Label text="Liste des disponibilités" textFill="#2c5282">
                                <font>
                                    <Font name="System Bold" size="22.0" />
                                </font>
                            </Label>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT" spacing="15.0" HBox.hgrow="ALWAYS" />
                </children>
            </HBox>

            <!-- Barre de recherche améliorée -->
            <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="75.0" prefHeight="60.0" prefWidth="860.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
                <children>
                    <Label text="Rechercher:" textFill="#2c5282">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="searchDatePicker" prefHeight="35.0" prefWidth="180.0" promptText="Sélectionner un jour" style="-fx-background-color: #f1f5f9; -fx-background-radius: 5;" />
                    <ComboBox fx:id="searchMedecinComboBox" prefHeight="35.0" prefWidth="220.0" promptText="Sélectionner un médecin" style="-fx-background-color: #f1f5f9; -fx-background-radius: 5;" />
                    <Button fx:id="btnRechercher" mnemonicParsing="false" onAction="#rechercherDisponibilites" prefHeight="35.0" style="-fx-background-color: #2c5282; -fx-background-radius: 5; -fx-text-fill: white; -fx-font-weight: bold;" text="Rechercher">
                        <graphic>
                            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@assets/icons8-search-16.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        <padding>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                        </padding>
                    </Button>
                    <Button fx:id="btnReinitialiser" mnemonicParsing="false" onAction="#reinitialiserRecherche" prefHeight="35.0" style="-fx-background-color: #e5edff; -fx-background-radius: 5; -fx-text-fill: #2c5282; -fx-font-weight: bold;" text="Réinitialiser">
                        <padding>
                            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                        </padding>
                    </Button>
                </children>
            </HBox>

            <!-- Container du tableau redimensionné -->
            <AnchorPane layoutX="0.0" layoutY="150.0" prefHeight="410.0" prefWidth="860.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <children>
                    <!-- Tableau avec colonnes optimisées -->
                    <TableView fx:id="tableDisponibilite" layoutX="10.0" layoutY="10.0" prefHeight="390.0" prefWidth="840.0" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: transparent;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                        <columns>
                            <TableColumn fx:id="colJour" prefWidth="200.0" style="-fx-alignment: CENTER-LEFT;" text="Date" />
                            <TableColumn fx:id="colHeures" prefWidth="320.0" style="-fx-alignment: CENTER-LEFT;" text="Plages horaires disponibles" />
                            <TableColumn fx:id="colStatut" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Statut" />
                            <TableColumn fx:id="colActions" prefWidth="200.0" style="-fx-alignment: CENTER;" text="Actions" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </AnchorPane>
        </AnchorPane>
    </children>
</AnchorPane>
